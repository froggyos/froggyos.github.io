{
    "scopeName": "source.froggyscript3",
    "patterns": [
        { "include": "#fReturn" },
        { "include": "#dunder" },
        { "include": "#boolean" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#methods" },
        { "include": "#literal" },
        { "include": "#keywords" },
        { "include": "#variables" },
        { "include": "#condition" },
        { "include": "#references" },
        { "include": "#comments" },
        { "include": "#operator" },
        { "include": "#grouping" },
        { "include": "#array" }
    ],
    "repository": {
        "literal": {
            "patterns": [
                {
                    "name": "literal.fs3",
                    "match": " in | = "
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.io.fs3",
                    "match": "\\b(out|prompt|ask)\\b"
                },
                {
                    "name": "keyword.control.fs3",
                    "match": "\\b(if|else|loop|foreach|break|continue|skip|return|exit)\\b"
                },
                {
                    "name": "keyword.system.fs3",
                    "match": "\\b(kill|quietkill|wait|clearterminal|free)\\b"
                },
                {
                    "name": "keyword.imported.fs3",
                    "match": "\\b(objset|keydown|keyup)\\b"
                },
                {
                    "name": "keyword.system.file.fs3",
                    "match": "\\b(import|filearg)\\b"
                },
                {
                    "name": "keyword.declaration.fs3",
                    "match": "\\b(var|cvar|func|pfunc|set|arrset)\\b"
                },
                {
                    "name": "keyword.call.fs3",
                    "match": "\\b(call|pcall)\\b"
                },
                {
                    "name": "keyword.io.error.fs3",
                    "match": "\\b(error|longerror)\\b"
                },
                {
                    "name": "keyword.io.warn.fs3",
                    "match": "\\b(warn|longwarn)\\b"
                }
            ]
        },
        "fReturn": {
            "patterns": [
                {
                    "name": "keyword.control.freturn.fs3",
                    "match": "\\bfReturn\\b"
                }
            ]
        },
        "array": {
            "patterns": [
                {
                    "name": "array.begin.fs3",
                    "match": "\\["
                },
                {
                    "name": "array.end.fs3",
                    "match": "\\]"
                }
            ]
        },
        "grouping": {
            "patterns": [
                {
                    "name": "paren.begin.fs3",
                    "match": "\\("
                },
                {
                    "name": "paren.end.fs3",
                    "match": "\\)"
                },
                {
                    "name": "block.begin.fs3",
                    "match": "\\{"
                },
                {
                    "name": "block.end.fs3",
                    "match": "\\}"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.fs3",
                    "match": "#.*$"
                }
            ]
        },
        "operator": {
            "patterns": [
                {
                    "name": "operator.fs3",
                    "match": "( == | != | <= | >= | < | > | & )"
                }
            ]
        },
        "boolean": {
            "patterns": [
                {
                    "name": "boolean.fs3",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "condition": {
            "patterns": [
                {
                    "name": "meta.condition.fs3",
                    "begin": "<<",
                    "end": ">>",
                    "beginCaptures": {
                        "0": { "name": "punctuation.definition.condition.begin.fs3" }
                    },
                    "endCaptures": {
                        "0": { "name": "punctuation.definition.condition.end.fs3" }
                    },
                    "patterns": [
                        { "include": "#boolean" },
                        { "include": "#operator" },
                        { "include": "#dunder" }
                    ]
                }
            ]
        },
        "dunder": {
            "patterns": [
                {
                    "name": "variable.language.dunder.fs3",
                    "match": "(__[a-zA-Z_][a-zA-Z0-9_]*__)"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.fs3",
                    "match": "'([^'\\\\]|\\\\.)*'"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.fs3",
                    "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
                }
            ]
        },
        "references": {
            "patterns": [
                {
                    "name": "reference.variable.fs3",
                    "match": "\\$[A-Za-z_][A-Za-z0-9_]*"
                },
                {
                    "name": "reference.function.fs3",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.fs3",
                    "match": "[A-Za-z_][A-Za-z0-9_]*"
                }
            ]
        },
        "methods": {
            "patterns": [
                {
                    "name": "support.function.fs3",
                    "match": ">[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}